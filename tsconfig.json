{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@community/styles": ["packages/styles/index.js"],
      "@community/vite-config": ["packages/vite-config/index.ts"],
      "@community/*": ["packages/*"],
      "@community/ui": ["packages/ui/index.ts"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"]
}